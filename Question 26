#include <iostream>
using namespace std;

bool isArmstrong(int num) {
    int original = num;
    int n = 0;

    int temp = num;
    while (temp > 0) {
        n++;
        temp /= 10;
    }

    int sum = 0;
    temp = num;

    while (temp > 0) {
        int digit = temp % 10;

        int power = 1;
        for (int i = 0; i < n; i++)
            power *= digit;

        sum += power;
        temp /= 10;
    }

    return (sum == original);
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    if (isArmstrong(num))
        cout << num << " is an Armstrong number.";
    else
        cout << num << " is NOT an Armstrong number.";

    return 0;
}
