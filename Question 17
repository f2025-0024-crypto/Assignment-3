#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    // Make sure we work with a positive value
    if (n < 0) n = -n;

    // Repeat until the number becomes a single digit
    while (n >= 10) {
        int sum = 0;
        int temp = n;

        // Sum the digits
        while (temp > 0) {
            sum += temp % 10;
            temp = temp / 10;
        }

        n = sum;   // Replace n with the sum of its digits
    }

    cout << "Final single digit: " << n << endl;

    return 0;
}
