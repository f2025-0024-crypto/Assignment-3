#include <iostream>
using namespace std;

int main() {
    int h;
    cout << "Enter height: ";
    cin >> h;

    // Upper half
    for (int i = 1; i <= h; i++) {
        // spaces
        for (int s = 1; s <= h - i; s++)
            cout << " ";
        // stars
        for (int j = 1; j <= 2*i - 1; j++)
            cout << "*";
        cout << endl;
    }

    // Lower half
    for (int i = h - 1; i >= 1; i--) {
        // spaces
        for (int s = 1; s <= h - i; s++)
            cout << " ";
        // stars
        for (int j = 1; j <= 2*i - 1; j++)
            cout << "*";
        cout << endl;
    }

    return 0;
}
