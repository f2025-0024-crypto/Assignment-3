#include <iostream>
using namespace std;

int main() {
    int totalSeats = 50;
    int bookedSeats = 0;
    char choice;

    cout << "=== Bus Ticket Reservation System ===\n";

    while (bookedSeats < totalSeats) {
        cout << "\nTotal Seats: " << totalSeats << endl;
        cout << "Booked Seats: " << bookedSeats << endl;
        cout << "Available Seats: " << totalSeats - bookedSeats << endl;

        cout << "Do you want to book a seat? (y/n): ";
        cin >> choice;

        if (choice == 'y' || choice == 'Y') {
            bookedSeats++;
            cout << "Seat booked successfully!\n";

            if (bookedSeats == totalSeats) {
                cout << "\nAll seats are FULL. Booking closed!" << endl;
                break;
            }
        }
        else if (choice == 'n' || choice == 'N') {
            cout << "Booking canceled by user.\n";
            break;
        }
        else {
            cout << "Invalid input! Please enter y or n.\n";
        }
    }

    return 0;
}
