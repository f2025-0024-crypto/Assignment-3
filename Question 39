#include <iostream>
using namespace std;

int main() {
    int balance = 10000;
    int choice;
    int amount;

    while (true) {
        cout << "\n===== ATM Menu =====\n";
        cout << "1. Check Balance\n";
        cout << "2. Deposit\n";
        cout << "3. Withdraw\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Current Balance = " << balance << endl;
                break;

            case 2:
                cout << "Enter amount to deposit: ";
                cin >> amount;
                if (amount > 0) {
                    balance += amount;
                    cout << "Deposit successful!\n";
                } else {
                    cout << "Invalid amount!\n";
                }
                break;

            case 3:
                cout << "Enter amount to withdraw: ";
                cin >> amount;
                if (amount > balance) {
                    cout << "Insufficient balance!\n";
                } 
                else if (amount <= 0) {
                    cout << "Invalid amount!\n";
                }
                else {
                    balance -= amount;
                    cout << "Withdrawal successful!\n";
                }
                break;

            case 4:
                cout << "Thank you for using the ATM.\n";
                return 0;   

            default:
                cout << "Invalid choice! Please try again.\n";
        }
    }

    return 0;
}
